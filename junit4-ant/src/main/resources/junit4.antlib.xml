<antlib>
    <taskdef 
        name="junit4" 
        classname="com.carrotsearch.ant.tasks.junit4.JUnit4" />

    <taskdef 
        name="mergehints" 
        classname="com.carrotsearch.ant.tasks.junit4.balancers.MergeHints" />

    <taskdef 
        name="tophints" 
        classname="com.carrotsearch.ant.tasks.junit4.balancers.TopHints" />

    <!-- TestBalancers -->

    <typedef
        name="execution-times" 
        classname="com.carrotsearch.ant.tasks.junit4.balancers.ExecutionTimeBalancer" />

    <!-- Listeners and reports -->

    <typedef
        name="report-console" 
        classname="com.carrotsearch.ant.tasks.junit4.listeners.TextReport" />

    <typedef
        name="report-text" 
        classname="com.carrotsearch.ant.tasks.junit4.listeners.TextReport" />

    <typedef
        name="report-ant-xml" 
        classname="com.carrotsearch.ant.tasks.junit4.listeners.antxml.AntXmlReport" />

    <typedef
        name="report-json" 
        classname="com.carrotsearch.ant.tasks.junit4.listeners.json.JsonReport" />

    <typedef
        name="report-execution-times" 
        classname="com.carrotsearch.ant.tasks.junit4.listeners.ExecutionTimesReport" />
</antlib> 